.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.red {
    color: #F37878;
}

.gray {
    color: #737373;
}

.light-gray {
    color: #919191;
}

.bg-gray {
    background: #ececec;
}

.fixed-top {
    width: 100%;
    position: fixed;
    top: 0;
}

.fixed-bottom {
    width: 100%;
    position: fixed;
    bottom: 0;
}

button {
    box-sizing: border-box;
    padding: 0;
    border: none;
}

button::after {
    border: none;
}

.hide {
    display: none!important;
}

.weui-loading {
    margin: 0 5px;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    animation: weuiLoading 1s steps(12,end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.weui-loadmore {
    width: 65%;
    margin: 40rpx auto;
    line-height: 100rpx;
    font-size: 14px;
    text-align: center;
}

.weui-loadmore__tips {
    display: inline-block;
    vertical-align: middle;
}

.network {
    margin: 30rpx 0;
    width: 100%;
    height: 404rpx;
}

.network image {
    width: 430rpx;
    height: 314rpx;
    float: left;
    margin-left: 160rpx;
}

.network .btn {
    width: 200rpx;
    margin-left: 275rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 6rpx;
    background: #6E7889;
    float: left;
    font-size: 30rpx;
    color: #fff;
}

.network .btn:active {
    opacity: 0.4;
}