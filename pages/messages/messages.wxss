.item {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #fde7e3;
    border-bottom: 1rpx solid #fde7e3;
    position: relative;
}

.img {
    width: 120rpx;
}

.textWrap {
    margin-left: 30rpx;
    margin-right: 80rpx;
}

.tltle {
    font-size: 30rpx;
    font-weight: bold;
    display: block;
}

.des {
    font-size: 25rpx;
}

.red-point {
    width: 20rpx;
    height: 20rpx;
    background: #cf4747;
    position: absolute;
    top: 0;
    bottom: 0;
    right: 30rpx;
    margin: auto;
    align-items: center;
    border-radius: 10rpx;
}

.weui-loadmore {
    width: 65%;
    margin: 40rpx auto;
    line-height: 100rpx;
    font-size: 14px;
    text-align: center;
}

.weui-loadmore__tips {
    display: inline-block;
    vertical-align: middle;
}

.network {
    margin: 30rpx 0;
    width: 100%;
    height: 404rpx;
}

.network image {
    width: 430rpx;
    height: 314rpx;
    float: left;
    margin-left: 160rpx;
}

.network .btn {
    width: 200rpx;
    margin-left: 275rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 6rpx;
    background: #6E7889;
    float: left;
    font-size: 30rpx;
    color: #fff;
}

.network .btn:active {
    opacity: 0.4;
}